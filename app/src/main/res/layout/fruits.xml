<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/basket" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="backClick"
            android:text="@string/summary" />

        <Button
            android:id="@+id/backButtonFruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButton"
            android:layout_alignParentRight="true"
            android:onClick="backToMainClick"
            android:text="@string/back" />

        <TextView
            android:id="@+id/appleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButtonFruits"
            android:layout_marginTop="20dp"
            android:text="@string/apple" />

        <Button
            android:id="@+id/applePlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButtonFruits"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="incrementApple"
            android:text="+" />

        <TextView
            android:id="@+id/appleNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButtonFruits"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/applePlusButton"
            android:text="0" />

        <Button
            android:id="@+id/appleMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButtonFruits"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/appleNumber"
            android:onClick="decrementApple"
            android:text="-" />

        <TextView
            android:id="@+id/bananaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appleTextView"
            android:layout_marginTop="20dp"
            android:text="@string/banana" />

        <Button
            android:id="@+id/bananaPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applePlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementBanana"
            android:text="+" />

        <TextView
            android:id="@+id/bananaNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applePlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/bananaPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/bananaMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applePlusButton"
            android:layout_toRightOf="@id/bananaNumber"
            android:onClick="decrementBanana"
            android:text="-" />

        <TextView
            android:id="@+id/lemonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bananaTextView"
            android:layout_marginTop="20dp"
            android:text="@string/lemon" />

        <Button
            android:id="@+id/lemonPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bananaPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementLemon"
            android:text="+" />

        <TextView
            android:id="@+id/lemonNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bananaPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/lemonPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/lemonMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bananaPlusButton"
            android:layout_toRightOf="@id/lemonNumber"
            android:onClick="decrementLemon"
            android:text="-" />

        <TextView
            android:id="@+id/orangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lemonTextView"
            android:layout_marginTop="20dp"
            android:text="@string/potato" />

        <Button
            android:id="@+id/orangePlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lemonPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementOrange"
            android:text="+" />

        <TextView
            android:id="@+id/orangeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lemonPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/lemonPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/orangeMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lemonPlusButton"
            android:layout_toRightOf="@id/orangeNumber"
            android:onClick="decrementOrange"
            android:text="-" />

        <TextView
            android:id="@+id/peachTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orangeTextView"
            android:layout_marginTop="20dp"
            android:text="@string/peach" />

        <Button
            android:id="@+id/peachPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orangePlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementPeach"
            android:text="+" />

        <TextView
            android:id="@+id/peachNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orangePlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/peachPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/peachMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orangePlusButton"
            android:layout_toRightOf="@id/peachNumber"
            android:onClick="decrementPeach"
            android:text="-" />

        <TextView
            android:id="@+id/nectarineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peachTextView"
            android:layout_marginTop="20dp"
            android:text="@string/nectarine" />

        <Button
            android:id="@+id/nectarinePlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peachPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementNectarine"
            android:text="+" />

        <TextView
            android:id="@+id/nectarineNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peachPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/peachPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/nectarineMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peachPlusButton"
            android:layout_toRightOf="@id/nectarineNumber"
            android:onClick="decrementNectarine"
            android:text="-" />

        <TextView
            android:id="@+id/pearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nectarineTextView"
            android:layout_marginTop="20dp"
            android:text="@string/pear" />

        <Button
            android:id="@+id/pearPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nectarinePlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementPear"
            android:text="+" />

        <TextView
            android:id="@+id/pearNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nectarinePlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pearPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/pearMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nectarinePlusButton"
            android:layout_toRightOf="@id/pearNumber"
            android:onClick="decrementPear"
            android:text="-" />

        <TextView
            android:id="@+id/grapeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pearTextView"
            android:layout_marginTop="20dp"
            android:text="@string/grape" />

        <Button
            android:id="@+id/grapePlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pearPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementGrape"
            android:text="+" />

        <TextView
            android:id="@+id/grapeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pearPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/grapePlusButton"
            android:text="0" />

        <Button
            android:id="@+id/grapeMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pearPlusButton"
            android:layout_toRightOf="@id/grapeNumber"
            android:onClick="decrementGrape"
            android:text="-" />

        <TextView
        android:id="@+id/watermelonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grapeTextView"
        android:layout_marginTop="20dp"
        android:text="@string/watermelon" />

        <Button
            android:id="@+id/watermelonPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grapePlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementWatermelon"
            android:text="+" />

        <TextView
            android:id="@+id/watermelonNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grapePlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/watermelonPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/mandarinMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watermelonPlusButton"
            android:layout_toRightOf="@id/watermelonNumber"
            android:onClick="decrementWatermelon"
            android:text="-" />
        <TextView
            android:id="@+id/mandarinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watermelonTextView"
            android:layout_marginTop="20dp"
            android:text="@string/mandarin" />

        <Button
            android:id="@+id/mandarinPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watermelonPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementMandarin"
            android:text="+" />

        <TextView
            android:id="@+id/mandarinNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watermelonPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/watermelonPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/watermelonMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grapePlusButton"
            android:layout_toRightOf="@id/watermelonNumber"
            android:onClick="decrementMandarin"
            android:text="-" />

        <TextView
            android:id="@+id/cherryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mandarinTextView"
            android:layout_marginTop="20dp"
            android:text="@string/cherry" />

        <Button
            android:id="@+id/cherryPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mandarinPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementCherry"
            android:text="+" />

        <TextView
            android:id="@+id/cherryNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mandarinPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/mandarinPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/cherryMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mandarinPlusButton"
            android:layout_toRightOf="@id/mandarinNumber"
            android:onClick="decrementCherry"
            android:text="-" />

        <TextView
            android:id="@+id/sweetcherryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cherryTextView"
            android:layout_marginTop="20dp"
            android:text="@string/sweetcherry" />

        <Button
            android:id="@+id/sweetcherryPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cherryPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementSweetCherry"
            android:text="+" />

        <TextView
            android:id="@+id/sweetcherryNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cherryPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/cherryPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/sweetcherryMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cherryPlusButton"
            android:layout_toRightOf="@id/cherryNumber"
            android:onClick="decrementSweetCherry"
            android:text="-" />

        <TextView
            android:id="@+id/kiwiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sweetcherryTextView"
            android:layout_marginTop="20dp"
            android:text="@string/kiwi" />

        <Button
            android:id="@+id/kiwiPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sweetcherryPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementKiwi"
            android:text="+" />

        <TextView
            android:id="@+id/kiwiNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sweetcherryPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/sweetcherryPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/kiwiMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sweetcherryPlusButton"
            android:layout_toRightOf="@id/sweetcherryNumber"
            android:onClick="decrementKiwi"
            android:text="-" />

        <TextView
            android:id="@+id/strawberryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kiwiTextView"
            android:layout_marginTop="20dp"
            android:text="@string/strawberry" />

        <Button
            android:id="@+id/strawberryPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kiwiPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementStrawberry"
            android:text="+" />

        <TextView
            android:id="@+id/strawberryNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kiwiPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/kiwiPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/strawberryMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kiwiPlusButton"
            android:layout_toRightOf="@id/kiwiNumber"
            android:onClick="decrementStrawberry"
            android:text="-" />


        <TextView
            android:id="@+id/pineappleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/strawberryTextView"
            android:layout_marginTop="20dp"
            android:text="@string/pineapple" />

        <Button
            android:id="@+id/pineapplePlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/strawberryPlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementPineapple"
            android:text="+" />

        <TextView
            android:id="@+id/pineappleNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/strawberryPlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/strawberryPlusButton"
            android:text="0" />

        <Button
            android:id="@+id/pineappleMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/strawberryPlusButton"
            android:layout_toRightOf="@id/strawberryNumber"
            android:onClick="decrementPineapple"
            android:text="-" />

        <TextView
            android:id="@+id/apricotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pineappleTextView"
            android:layout_marginTop="20dp"
            android:text="@string/apricot" />

        <Button
            android:id="@+id/apricotPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pineapplePlusButton"
            android:layout_centerHorizontal="true"
            android:onClick="incrementApricot"
            android:text="+" />

        <TextView
            android:id="@+id/apricotNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pineapplePlusButton"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/pineapplePlusButton"
            android:text="0" />

        <Button
            android:id="@+id/apricotMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pineapplePlusButton"
            android:layout_toRightOf="@id/pineappleNumber"
            android:onClick="decrementApricot"
            android:text="-" />


    </RelativeLayout>
</ScrollView>
